﻿const LandingPage = require("LandingWindow");
const OrderFormWindow = require("OrdersFormWindow");
const { openOrdersApp, closeOrdersApp } = require("CommonFunctions");

class OrderFormTestCases{
  
  constructor(){
    this.OrderFormWindow = new OrderFormWindow();
  }
  
  addOrderWithState(){
    openOrdersApp();
    LandingPage.clickingAddOrder();
    this.OrderFormWindow.setState(Project.Variables.address);
    this.OrderFormWindow.copyStateValue();
    const address = Sys.Clipboard;
    aqString.ListSeparator = ',';
    this.OrderFormWindow.setCity(aqString.GetListItem(address,0));
    this.OrderFormWindow.setStreet(aqString.GetListItem(address,1));
    this.OrderFormWindow.setZip(aqString.GetListItem(address,2));
    this.OrderFormWindow.clickSubmitButton();
    closeOrdersApp();
  }
}

module.exports = OrderFormTestCases;